{
  "name": "webpack-must-have",
  "version": "1.0.0",
  "description": "Must-have config for Webpack 4",
  "main": "main.jsx",
  "scripts": {
    "test": "npm run lint",
    "serve": "./node_modules/.bin/webpack-dev-server --hot --open --config webpack.devServer.js",
    "build-prod": "./node_modules/.bin/webpack --mode production --config webpack.prod.js",
    "build-prod-withMap": "./node_modules/.bin/webpack --mode production --config webpack.prod.js --sourceMap",
    "build-dev": "./node_modules/.bin/webpack --mode development --config webpack.dev.js",
    "lint": "npm run lint-code && npm run lint-styles",
    "lint-code": "./node_modules/.bin/eslint --fix --cache ./**/*.{js,jsx,ts,tsx,json}",
    "lint-styles": "./node_modules/.bin/stylelint --fix --cache ./**/*.{css,scss,less}",
    "lint-md": "./node_modules/.bin/markdownlint --fix **/*.md --ignore node_modules"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Yegorich555/WebpackMustHave.git"
  },
  "keywords": [
    "React",
    "Webpack",
    "ReactJS",
    "Webpack4"
  ],
  "author": "Yegor.Golubchik",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Yegorich555/WebpackMustHave/issues"
  },
  "homepage": "https://github.com/Yegorich555/WebpackMustHave#readme",
  "devDependencies": {
    "@babel/core": "^7.13.1",
    "@babel/plugin-proposal-class-properties": "^7.13.0",
    "@babel/preset-env": "^7.13.5",
    "@babel/preset-react": "^7.12.13",
    "@babel/preset-typescript": "^7.13.0",
    "@types/express": "^4.17.11",
    "@types/react": "^17.0.2",
    "@typescript-eslint/parser": "^4.15.2",
    "autoprefixer": "^10.2.4",
    "babel-loader": "^8.2.2",
    "babel-plugin-jsx-classnames-advanced": "^1.0.2",
    "browserlist": "^1.0.1",
    "case-sensitive-paths-webpack-plugin": "^2.4.0",
    "clean-webpack-plugin": "^3.0.0",
    "compression-webpack-plugin": "^6.1.1",
    "copy-webpack-plugin": "^6.4.1",
    "css-loader": "^5.1.0",
    "eslint": "^7.20.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-config-prettier": "^8.1.0",
    "eslint-import-resolver-typescript": "^2.4.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-json": "^2.1.2",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-react": "^7.22.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "file-loader": "^6.2.0",
    "friendly-errors-webpack-plugin": "^1.7.0",
    "html-webpack-plugin": "^4.5.2",
    "markdownlint": "^0.23.1",
    "markdownlint-cli": "^0.26.0",
    "mini-css-class-name": "^0.12.1",
    "mini-css-extract-plugin": "^1.3.9",
    "node-sass": "^5.0.0",
    "obsolete-webpack-plugin": "^0.5.6",
    "optimize-css-assets-webpack-plugin": "^5.0.4",
    "postcss": "^8.2.6",
    "postcss-loader": "^4.2.0",
    "postcss-normalize": "^9.0.0",
    "postcss-scss": "^3.0.4",
