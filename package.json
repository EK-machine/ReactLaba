    "svg-url-loader": "^7.1.1",
    "terser-webpack-plugin": "^4.2.3",
    "ts-loader": "^8.0.17",
    "tsconfig-paths-webpack-plugin": "^3.3.0",
    "typescript": "^4.2.2",
    "url-loader": "^4.1.1",
    "webpack": "^4.46.0",
    "webpack-cli": "^3.3.12",
    "webpack-dev-server": "^3.11.2",
    "webpack-merge": "^5.7.3",
    "webpack-mock-server": "^1.0.5"
  },
  "dependencies": {
    "core-js": "^3.9.0",
    "react": "^17.0.1",
    "react-dom": "^17.0.1"
  }
